<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.vinesh.togglebuttondemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <xyz.vinesh.toggleslider.ToggleSlider
            android:id="@+id/tsToggleButton1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            app:sliderState="true"
            app:sliderTextOff="off"
            app:sliderTextOn="on" />

        <xyz.vinesh.toggleslider.ToggleSlider
            android:id="@+id/tsToggleButton2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            app:sliderTextOff="Inactive"
            app:sliderTextOn="Active" />

        <xyz.vinesh.toggleslider.ToggleSlider
            android:id="@+id/tsToggleButton3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            app:sliderBackgroundOffColor="@android:color/darker_gray"
            app:sliderTextOff="off"
            app:sliderTextOn="on" />

        <xyz.vinesh.toggleslider.ToggleSlider
            android:id="@+id/tsToggleButton4"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="8dp"
            app:sliderTextOff="Inactive"
            app:sliderTextOn="Active" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
